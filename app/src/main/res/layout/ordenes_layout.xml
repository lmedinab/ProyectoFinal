<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/textos">

        <TextView
            android:id="@+id/ordenuser"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/ordenphone"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Numero"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/ordenprecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_below="@+id/ordenuser"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ordencorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo y Direccion"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_below="@+id/ordenprecio"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/ordenfecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha y Hora"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_below="@+id/ordencorreo"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/ver_productos_orden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordenfecha"
            android:text="Ver Producto de esta orden"
            android:background="@drawable/botones1"
            android:textColor="@color/white"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>
</RelativeLayout>